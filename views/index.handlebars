<h1>Burger Stop</h1>

<h2>All the Burgers</h2>

<ul>
	{{#each burger}}
		{{#unless devoured}}
				<li>
			{{burger_name}}

			<button class="eat-burger" data-id="{{id}}" data-burger="{{devoured}}">
				{{#if devoured}}EATEN{{else}}EAT{{/if}}
			</button>

			{{!-- <button class="delete-cat" data-id="{{this.id}}">DELETE!</button> --}}
		</li>

		{{/unless}}
	{{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burger Name:</label>
    <input type="text" id="bur" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
